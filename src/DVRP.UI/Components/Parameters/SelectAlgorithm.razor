<Card Margin="Margin.Is4.OnY">
    <CardHeader>
        <CardTitle>Select Algorithm</CardTitle>
    </CardHeader>
    <CardBody>
        <Tabs SelectedTab="@SelectedTab" SelectedTabChanged="@OnSelectedTabChanged" Justified>
            <Items>
                <Tab Name="@(nameof(Algorithm.GeneticAlgorithm))">Genetic Algorithm</Tab>
                <Tab Name="@(nameof(Algorithm.AntColonyOptimization))">Ant Colony Optimization</Tab>
                <Tab Name="@(nameof(Algorithm.GaAcoAlgorithm))">GA-ACO Algorithm</Tab>
            </Items>
            <Content>
                <TabPanel Name="@(nameof(Algorithm.GeneticAlgorithm))">
                    <GaParametersInput @bind-Parameters="AlgorithmParameters" />
                </TabPanel>
                <TabPanel Name="@(nameof(Algorithm.AntColonyOptimization))">
                    <AcoParametersInput @bind-Parameters="AlgorithmParameters" />
                </TabPanel>
                <TabPanel Name="@(nameof(Algorithm.GaAcoAlgorithm))">
                    <GaAcoParametersInput @bind-Parameters="AlgorithmParameters" />
                </TabPanel>
            </Content>
        </Tabs>
    </CardBody>
</Card>
