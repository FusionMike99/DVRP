@using DVRP.Domain.Entities;

<DataGrid TItem="Depot" Data="@Depots" @bind-SelectedRow="@_selectedDepot"
          Editable EditMode="DataGridEditMode.Popup" Responsive ShowPager CommandMode="DataGridCommandMode.ButtonRow">
    <DataGridColumns>
        <DataGridNumericColumn Field="@nameof(Depot.Id)" Caption="Id" Sortable="false" />
        <DataGridNumericColumn Field="@nameof(Depot.X)" Caption="Latitude" Editable />
        <DataGridNumericColumn Field="@nameof(Depot.Y)" Caption="Longitude" Editable />
    </DataGridColumns>
    <ButtonRowTemplate>
        <Button Color="Color.Success" Clicked="context.NewCommand.Clicked">New</Button>
        <Button Color="Color.Primary" Disabled="(_selectedDepot is null)" Clicked="context.EditCommand.Clicked">Edit</Button>
        <Button Color="Color.Danger" Disabled="(_selectedDepot is null)" Clicked="context.DeleteCommand.Clicked">Delete</Button>
    </ButtonRowTemplate>
</DataGrid>
